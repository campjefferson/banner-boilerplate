<html>

<head>
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            font-family: "Helvetica Neue", Arial, sans-serif;
        }

        h1,
        h2 {
            text-transform: uppercase;
        }

        h1 {
            padding-top: 20px;
            text-align: center;
        }

        ul {
            list-style: none;
            padding: 0;
            margin-bottom: 50px;
        }

        .main {
            width: 960px;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <div class="main">
        <h1>{{title}}</h1>
        {{#each bannerLinks as |group|}}
        <h2>{{group.title}}</h2>
        <ul>
            {{#each group.banners as |banner|}}
            <li>
                <a href="{{banner.url}}">{{banner.title}}</a>
            </li>
            {{/each}}
        </ul>
        {{/each}}
    </div>
</body>

</html>